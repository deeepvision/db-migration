{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "exclude": [
    "node_modules"
  ]
 }